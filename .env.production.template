# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Node Environment
NODE_ENV=production

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=eu-west-2
AWS_AMPLIFY_BUCKET=wider-ai-websites

# API Keys
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_key_here

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token_here
VITE_GITHUB_ACCESS_TOKEN=ghp_your_github_token_here
VITE_GITHUB_TOKEN_TYPE=classic

# Database
MONGODB_CONNECTION_STRING=mongodb://your_mongodb_connection_string_here

# Application URLs (adjust for production)
API_AUTH_URL=https://your-domain.com
API_ROOT_URL=https://your-domain.com
WIDER_APP_URL=https://your-domain.com
OWN_APP_URL=https://your-domain.com

# Debug (set to 'error' for production)
VITE_LOG_LEVEL=error

# Docker specific
RUNNING_IN_DOCKER=true
